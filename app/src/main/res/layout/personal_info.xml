
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:background="@drawable/back">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            android:layout_marginTop="25dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingTop="2dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/registration"
                android:text="Reg.No : "
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/registration"
                android:textColor="@color/black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="150dp"
                android:textColor="@color/sysBlack"
                android:textSize="30dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="160dp"
                    android:text="Student Id  : "
                    android:textColor="@color/black"
                    android:textSize="10dp" />


                <TextView
                    android:id="@+id/studentid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="160dp"
                    android:text="College Id   : "
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/collegeid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="160dp"
                    android:text="Center Id   : "
                    android:textColor="@color/black"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/centerid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:layout_marginTop="160dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@color/sysWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="200dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:text="Current Year"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:background="@color/sysWhite"
            android:textAlignment="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/currentyear"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:background="@color/sysWhite"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingTop="240dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:text="Admission Class"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:background="@color/sysWhite"
            android:textAlignment="center"

            />

        <TextView
            android:id="@+id/admissionclass"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/sysWhite"
            android:textAlignment="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="280dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:text="Admission Status"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:background="@color/sysWhite"
            android:textAlignment="center"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:id="@+id/admissionstatus"
            android:layout_marginLeft="20dp"
            android:background="@color/sysWhite"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="320dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@color/sysWhite"
            android:text="Gender"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:background="@color/sysWhite"
            android:textAlignment="center" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parents Information"
        android:layout_marginTop="360dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@color/sysWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="400dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:text="Father Name"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:background="@color/sysWhite"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:id="@+id/fathername"
            android:layout_marginLeft="20dp"
            android:background="@color/sysWhite"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="440dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:text="Father Contact"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:background="@color/sysWhite"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/fathercontact"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:background="@color/sysWhite"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="480dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:text="Mother Name"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:background="@color/sysWhite"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:id="@+id/mothername"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:background="@color/sysWhite"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="520dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@color/sysWhite"
            android:text="Mother Contact"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mothercontact"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:background="@color/sysWhite"
            android:textAlignment="center" />
    </LinearLayout>


</RelativeLayout>

</ScrollView>